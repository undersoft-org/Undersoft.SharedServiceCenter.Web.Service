{
  "Version": "0.1.1",
  "Title": "Undersoft SSC Web Service API",
  "Description": "Undersoft All Campus Security Web Service API",

  "AllowedHosts": "*",

  "DataCache": {
    "Hours": "0",
    "Minutes": "45"
  },

  "Repository": {
    "Sources": {
      "Undersoft.SSC.Web.Infrastructure.Persistance.Stores.ServiceEntryStore": {
        "ConnectionString": "Host=localhost; Port=5432; Database=SSC-Service-Entries; UserId=postgres; Password=V00dkaPL; Pooling=true;",
        "SourceProvider": "PostgreSql",
        "PoolSize": 128
      },
      "Undersoft.SSC.Web.Infrastructure.Persistance.Stores.ServiceEventStore": {
        "ConnectionString": "Host=localhost; Port=5432; Database=SSC-Service-Events; UserId=postgres; Password=V00dkaPL; Pooling=true;",
        "SourceProvider": "PostgreSql",
        "PoolSize": 128
      },
      "Undersoft.SSC.Web.Infrastructure.Persistance.Stores.ServiceReportStore": {
        "ConnectionString": "Host=localhost; Port=5432; Database=SSC-Service-Reports; UserId=postgres; Password=V00dkaPL; Pooling=true;",
        "SourceProvider": "PostgreSql",
        "PoolSize": 128
      },
      "Undersoft.SSC.Web.Infrastructure.Persistance.Stores.ServiceIdentityStore": {
        "ConnectionString": "Host=localhost; Port=5432; Database=SSC-Service-Identities; UserId=postgres; Password=V00dkaPL; Pooling=true;",
        "SourceProvider": "PostgreSql",
        "PoolSize": 128
      }
    }
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Kestrel": {
    "EndpointDefaults": {
      "Protocols": "Http1AndHttp2"
    }
  },
  "StoreRoutes": {
    "EntryStore": "entry",
    "EventStore": "event",
    "ReportStore": "report",
    "DataStore": "data",
    "OpenEventStore": "event/open",
    "OpenDataStore": "data/open",
    "StreamEventStore": "event/stream",
    "StreamDataStore": "data/stream",
    "CrudEventStore": "event/crud",
    "CrudDataStore": "data/crud"
  },
  "OpenTelemetry": {
    "IncludeFormattedMessage": true,
    "IncludeScopes": true,
    "ParseStateValues": true
  },
  "ServiceName": "undersoft.ssc.web.service.api",
  "UseTracingExporter": "jeager",
  "UseMetricsExporter": "prometheus",
  "UseLogExporter": "console",
  "HistogramAggregation": "explicit",
  "Jaeger": {
    "AgentHost": "localhost",
    "AgentPort": 6831,
    "Endpoint": "http://localhost:14268",
    "Protocol": "UdpCompactThrift"
  },
  "AspNetCoreInstrumentation": {
    "RecordException": "true"
  },
  "IdentityServer": {
    "BaseUrl": "https://localhost:7200",
    "ApiName": "Undersoft SSC Web App Server",
    "ApiVersion": "v1",
    "ApiBaseUrl": "https://localhost:7200",
    "SwaggerClientId": "ssc.web.service.openapi",
    "Audience": "https://localhost:7200",
    "Issuer": "http://localhost:7201",
    "Scopes": [
      "account.read",
      "account.update",
      "account.create",
      "account.delete",
      "account.execute",
      "activity.read",
      "activity.update",
      "activity.create",
      "activity.delete",
      "resource.read",
      "resource.update",
      "resource.create",
      "resource.delete",
      "schedule.read",
      "schedule.update",
      "schedule.create",
      "schedule.delete"
    ],
    "Claims": [
      "group",
      "id",
      "type_id",
      "code_no",
      "email",
      "name",
      "profile",
      "label",
      "type",
      "role",
      "scope",
      "client_id"
    ],
    "Roles": [
      "member",
      "user",
      "manager,",
      "administrator",
      "provider",
      "subcontractor",
      "customer",
      "servicer",
      "integrator"
    ],
    "AdministrationRole": "Administrator",
    "RequireHttpsMetadata": false,
    "CorsAllowAnyOrigin": true,
    "CorsAllowOrigins": []
  }
}